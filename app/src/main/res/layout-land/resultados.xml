        <TextView
            android:textAlignment="center"
            android:layout_column="1"
            android:text="Custo"
            android:padding="1dip"/>
        <TextView
            android:id="@+id/custo_indicativa"
            android:textAlignment="center"
            android:layout_column="2"
            android:text="R$ 0"
            android:padding="1dip"/>
        <TextView
            android:id="@+id/custo_estimativa"
            android:textAlignment="center"
            android:layout_column="4"
            android:text="R$ 0"
            android:padding="1dip"/>
        <TextView
            android:id="@+id/custo_detalhada"
            android:textAlignment="center"
            android:layout_column="6"
            android:text="R$ 0"
            android:padding="1dip"/>
