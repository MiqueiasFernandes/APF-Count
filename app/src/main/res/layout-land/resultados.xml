            android:textStyle="bold"
            android:layout_column="1"
            android:text="Resultados da contagem"
            android:padding="1dip"
            android:textAlignment="center"/>


    <TableRow>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_column="1"
            android:text="Simplificado"
            android:padding="1dip"/>
    </TableRow>
    <View
        android:layout_height="1dip"
        android:background="#FF909090" />
    <TableRow
        android:background="@color/midrow">
        <TextView
            android:textAlignment="center"
            android:layout_column="1"
            android:text="TIPO"
            android:padding="1dip"/>
        <TextView
            android:textAlignment="center"
            android:layout_column="2"
            android:text="PF ALI"
            android:padding="1dip"/>
        <TextView
            android:textAlignment="center"
            android:layout_column="3"
            android:text="PF AIE"
            android:padding="1dip"/>
        <TextView
            android:textAlignment="center"
            android:layout_column="4"
            android:text="PF EE"
            android:padding="1dip"/>
        <TextView
            android:textAlignment="center"
            android:layout_column="5"
            android:text="PF CE"
            android:padding="1dip"/>
        <TextView
            android:textAlignment="center"
            android:layout_column="6"
            android:text="PF SE"
            android:padding="1dip"/>
        <TextView
            android:textAlignment="center"
            android:layout_column="7"
            android:text="PF TOTAL"
            android:padding="1dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:textAlignment="center"
            android:layout_column="1"
            android:text="INDICATIVA"
            android:padding="1dip"/>
        <TextView
            android:id="@+id/indicativa_ali_pf"
            android:textAlignment="center"
            android:layout_column="2"
            android:text="0"
            android:padding="1dip"/>
        <TextView
            android:id="@+id/indicativa_aie_pf"
            android:textAlignment="center"
            android:layout_column="3"
            android:text="0"
            android:padding="1dip"/>
        <TextView
            android:id="@+id/indicativa_ee_pf"
            android:textAlignment="center"
            android:layout_column="4"
